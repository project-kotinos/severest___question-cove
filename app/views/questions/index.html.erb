<div class="container">
  <%= render 'shared/demo' if Rails.configuration.demo_mode %>

  <div class="row">
    <div class="col-md-9 question-list-container">

      <div class="row">
        <div class="col-md-7">
          <%= link_to 'New Question', new_question_path, class: "btn btn-default" %>
        </div>
        <div class="col-md-5">
          <form method="GET">
            <input type="hidden" name="order" value="<%= @order %>" />
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for..." name="s" value="<%= @search_query %>">
              <span class="input-group-btn">
                <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
              </span>
            </div>
          </form>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= render 'shared/sorting_controls' %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="question-list">
          <% @questions.each do |question| %>
            <%= render partial: 'questions/show', locals: {question: question} %>
          <% end %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 text-center">
          <%= paginate @questions %>
        </div>
      </div>

    </div>
    <div class="col-md-3">
      <%= render partial: 'shared/most_used_tags', locals: {tag_list: @most_used_tags} %>
    </div>
  </div>
</div>

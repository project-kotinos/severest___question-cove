<div id="clearance" class="container password-reset">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2><%= t(".title") %></h2>

      <p><%= t(".description") %></p>

      <%= form_for :password, url: passwords_path do |form| %>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, type: 'email', class: 'form-control' %>
        </div>

        <button class="btn btn-primary" type="submit"><%= t('.reset') %></button>
      <% end %>
    </div>
  </div>
</div>

<!DOCTYPE html>
<html>
<head>
  <title>QuestionCove</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>

  <script src="//cdnjs.cloudflare.com/ajax/libs/showdown/1.3.0/showdown.min.js"></script>
</head>
<body>

<div class="page">
  <div class="navigation">
    <div class="navigation__brand">
      <%= link_to 'Question Cove', root_path %>
    </div>

    <div class="navigation__user">
      <% if current_user %>
        <a href="<%= url_for user_path(current_user) %>">
          <%= gravatar_tag current_user.email, :size => 25 %> <%= current_user.email %>
        </a>
        <%= link_to 'Log Out', logout_path, method: :delete %>
      <% else %>
        <div class="navigation__user__notloggedin">
          Not logged in
        </div>
      <% end %>
    </div>
  </div>

  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
          <% if flash[:notice] %>
            <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
          <% end %>
          <% if flash[:alert] %>
            <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
          <% end %>
        </div>
      </div>

      <%= yield %>
    </div>
  </div>
</div>



</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>QuestionCove</title>

  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>

  <script src="//cdnjs.cloudflare.com/ajax/libs/showdown/1.3.0/showdown.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
</head>
<body>

<div class="page">
  <div class="navigation">
    <div class="navigation__brand">
      <%= link_to 'Question Cove', root_path %>
    </div>

    <div class="navigation__user">
      <% if current_user %>
        <div class="navigation__user__link">
          <a href="<%= url_for user_path(current_user) %>">
            <%= gravatar_tag current_user.email, :size => 35 %> <%= current_user.email %>
          </a>
        </div>
        <div class="navigation__user__logout">
          <%= link_to 'Log Out', logout_path, method: :delete %>
        </div>
      <% else %>
        <div class="navigation__user__notloggedin">
          Not logged in
        </div>
      <% end %>
    </div>
  </div>

  <div class="content">
    <div class="container-fluid">
      <% if flash[:notice] %>
        <div class="flash-alert alert alert-success" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="flash-alert alert alert-danger" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>

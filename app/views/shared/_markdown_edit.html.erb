<script>
  var converter = new showdown.Converter();
  $(function () {
    $('.showdown-edit').on('keyup',function () {
      convert(this);
    });

    convert('.showdown-edit');
  });

  function convert(id) {
    text = $(id).val();
    html = converter.makeHtml(text);
    $('.showdown-content').html(html);
  }
</script>
